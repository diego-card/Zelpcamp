<%- include ('../partials/header') %>


	
	<header class="jumbotron">
		<div class="container">
			<h1>Welcome to Zelpcamp!</h1>
			<p>The best campground site out there.</p>
			<p>
				<a class="btn btn-primary btn-large" href="/campgrounds/new">Go to create new campground page</a>
			</p>
			<p>
				<form action="/campgrounds" method="GET" class="form-inline">
					<div class="form-group">
						<input type="text" name="search" placeholder="Search camprounds..." class="form-control" required>
						<input type="submit" value="Search" class="btn btn-default">
					</div>	
				</form>
			</p>
		</div>
	</header>

	<div class="row text-center" style="display:flex; flex-wrap: wrap;">
		<% campgrounds.forEach(function(camp){ %>
		<div class="col-md-3 col-sm-6">
			<div class="thumbnail">
				<img src="<%= camp.image %>">
				<div class="caption text-center">
					<h4>
						<%= camp.name %>
					</h4>
				</div>
				<p>
					<a href="/campgrounds/<%= camp._id %>" class="btn btn-primary">Show info</a>
				</p>	
			</div>
		</div>
		<% }); %>		
	</div>

	


	<%- include ('../partials/footer') %>